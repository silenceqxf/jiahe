/* pages/second_level/clean/clean.wxss */
page{
  background-color:#f0f0f0;
}

.clean_section{
  font-family:  "PingFang SC","Microsoft YaHei",Arial,sans-serif; 
  background-color:#fff;
}

.banner{
  background-color:#fff;
  width:100%;
  height:300rpx;
  text-align:center;
  padding:20rpx 0;
}

.slide_image{
  width:100%;
  height:300rpx;
}

.title{
  margin:10rpx;
  font-size:14px;
  text-align:center;
}

/*每一条的*/
.list_item{
  display:flex;
  flex-direction:row;
  border-bottom:1px #ccc solid;
}

.list_item_left_icon{
  width:280rpx;
  height:220rpx;
  margin:30rpx;
}

.list_item_right{
  flex:1;
  margin:30rpx 30rpx 30rpx 0rpx;
}

.list_name{
  color:#333;
  font-size:14px;
  margin-bottom:20rpx;
}

.item_desc{
  color:#333;
  font-size:12px;
  margin-bottom:20rpx;
}

.item_price{
  color:#ff62a7;
  font-size:15px;
  margin:20rpx;
}

.p_price{
  margin-right:20rpx;
}

.p_duration{
  margin-left:20rpx;
}

.item_desc{
  font-size:15px;
}
/**隐藏**/
.n{display: none;}

/**居中**/
.cc{ display: flex;justify-content: center; align-items: center;}

/**垂直居中**/
.vc{ display: flex; align-items: center;}
/**加粗**/
.fw-600{font-weight: 600;}
.fw-700{font-weight: 700;}
.fw-900{font-weight: 900;}